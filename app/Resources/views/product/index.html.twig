{% extends 'base.html.twig' %}

{% block body %}



    <div class="container">
        <div class="col-md-12">
            <div class="page-header margin-none">
                <h2 class="padding-none"> Lista de productos </h2>
            </div>



                    <a href="{{ path('product_new') }}" class="btn btn-sm btn-primary">
                        Create nuevo producto
                    </a>




            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Codigo</th>
                        <th>Descripcion</th>
                        <th>Marca</th>
                        <th>Categoria</th>
                        <th>Precio</th>
                        <th>Accion</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>

                            <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.code }}</td>
                            <td>{{ product.description }}</td>
                            <td>{{ product.brand }}</td>
                            <td>{{ product.category }}</td>
                            <td>{{ product.price }}</td>
                            <td>
                                <ul>

                                        <a href="{{ path('product_show', { 'id': product.id }) }}" class="btn btn-sm btn-default">
                                            View
                                        </a>


                                        <a href="{{ path('product_edit', { 'id': product.id }) }}" class="btn btn-sm btn-info">
                                            Edit
                                        </a>

                                </ul>
                            </td>


                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>





{% endblock %}
